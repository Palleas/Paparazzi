{
    "manifest_version": 2,
    "name": "Paparazzi Chrome Extension",
    "description": "Take a screenshot and send it directly to the context you've selected",
    "version": "1.0",
    "background": {
        "scripts": [
            "eventPage.js",
            "bower_components/qwest/qwest.min.js",
            "bower_components/blob-util/dist/blob-util.min.js",
            "bower_components/bluebird/js/browser/bluebird.core.min.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Take screenshot"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "https://paparazzi-upload.glitch.me/*"
    ]
}
